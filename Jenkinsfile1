pipeline {
    agent any
    tools {
        jdk 'JAVA_HOME'
        nodejs 'nodejs25'
    }
    
    stages {
      
        stage ("Git Checkout") {
            steps {
                git 'https://github.com/RBVikas3/Zomato.git'
            }
        }
  
  stage ("Build Docker Image") {
            steps {
                sh "docker build -t vikas033/zomatoapp:1.0 ."
            }
        }

stage("Tag & Push to DockerHub") {
    steps {
        script {
            withCredentials([usernamePassword(credentialsId: 'docker-login', 
                                              passwordVariable: 'dockerhubpass', 
                                              usernameVariable: 'dockerhublogin')]) {
                sh "docker login -u ${dockerhublogin} -p ${dockerhubpass}"
                sh "docker push vikas033/zomatoapp:1.0"
            }
        }
    }
}
  stage('Config & Deployment') {
    steps {
        withEnv(["AWS_REGION=ap-south-1"]) {

            withCredentials([
                aws(
                    credentialsId: 'awslogin',
                    accessKeyVariable: 'AWS_ACCESS_KEY_ID',
                    secretKeyVariable: 'AWS_SECRET_ACCESS_KEY'
                )
            ]) {

                dir('terraformfiles') {

                    sh 'sudo chmod 600 zomoto.pem'

                    sh 'terraform init'
                    sh 'terraform validate'

                    // IMPORTANT: pass region variable
                    sh '''
                    terraform apply \
                      -var="region=${AWS_REGION}" \
                      --auto-approve
                    '''
                }
            }
        }
    }
}


}
  }

