pipeline {
    agent any
    tools {
        jdk 'JAVA_HOME'
        nodejs 'nodejs25'
    }
    
    stages {
      
        stage ("Git Checkout") {
            steps {
                git 'https://github.com/RBVikas3/Zomato.git'
            }
        }
   stage("Install NPM Dependencies") {
            steps {
                sh "npm install"
            }
        }
  stage ("Build Docker Image") {
            steps {
                sh "docker build -t vikas033/zomatoapp:1.0 ."
            }
        }
}
  }

