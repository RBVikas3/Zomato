pipeline {
    agent any
    tools {
        jdk 'JAVA_HOME'
        nodejs 'nodejs25'
    }
    
    stages {
      
        stage ("Git Checkout") {
            steps {
                git 'https://github.com/RBVikas3/Zomato.git'
            }
        }
  
  stage ("Build Docker Image") {
            steps {
                sh "docker build -t vikas033/zomatoapp:1.0 ."
            }
        }

stage ("Tag & Push to DockerHub") {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'docker-login', passwordVariable: 'dockerhubpass', usernameVariable: 'dockerhublogin')]) { {
                        sh 'docker login -u ${dockerhublogin} -p ${dockerhubpass}'
                        sh "docker push vikas033/zomatoapp:1.0"
                    }
                }
            }
        }
}
  }

